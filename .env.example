PORT=8000

CLIENT_ORIGIN=http://localhost:5173

JWT_SECRET=my-secret-key
SESSION_SECRET=my-session-secret

# ===========================
# Google Client configuration
# ===========================

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_URL=https://accounts.google.com/o/oauth2/v2/auth
GOOGLE_ACCESS_TOKEN_URL=https://oauth2.googleapis.com/token
GOOGLE_TOKEN_INFO_URL=https://oauth2.googleapis.com/tokeninfo
GOOGLE_CALLBACK_URL=http://localhost:8000/api/auth/google/callback

# ========================
# PostgreSQL configuration
# ========================

DATABASE_URL= # optional, alternative to individual settings below
PGUSER=
PGPASSWORD=
PGHOST=
PGDATABASE=
PGPORT=

# ==========================
# S3 configuration (generic)
# ==========================

# The S3-compatible endpoint (example for Storj, but can be AWS, MinIO, Wasabi, etc.)
S3_ENDPOINT= # example: https://gateway.storjshare.io

# Credentials
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# (Optional) Signature version and path style (usually safe defaults)
S3_SIGNATURE_VERSION=v4
S3_FORCE_PATH_STYLE=true

# ==========================
# Public file access
# ==========================

# Public URL template for accessing uploaded files
# Replace {bucket}, {key}, and {projectId} depending on the provider
# Examples:
# - Storj: https://link.storjshare.io/raw/{projectId}/{bucket}/{key}
# - AWS:   https://{bucket}.s3.amazonaws.com/{key}
# - MinIO: https://minio.example.com/{bucket}/{key}
S3_PUBLIC_URL_TEMPLATE=
